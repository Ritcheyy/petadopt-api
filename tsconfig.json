{
  "compilerOptions": {
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "NodeNext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "es2015.promise"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "files":["types.d.ts"]
}
